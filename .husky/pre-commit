#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Load optional .env.local file
if [ -f .env.local ]; then
  export $(grep -v '^#' .env.local | xargs)
fi

# Conditionally skip hooks
if [ "$SKIP_HOOKS" = "true" ]; then
  echo "🔁 SKIP_HOOKS is true — skipping pre-commit checks"
  exit 0
fi

echo "🛡️  Starting pre-commit checks..."

# Step 1: Linting
echo "🧹 Step 1: Linting..."
pnpm lint || exit_code=$?
if [ "$exit_code" ]; then
  echo "❌ Lint failed."
  exit 1
fi
echo "✅ Lint passed!"

# Step 2: Type Checking
echo "📐 Step 2: Type checking..."
pnpm typecheck || exit_code=$?
if [ "$exit_code" ]; then
  echo "❌ Type check failed."
  exit 1
fi
echo "✅ Type check passed!"

# Step 3: Format Check
echo "🎨 Step 3: Format check..."
pnpm format:check || exit_code=$?
if [ "$exit_code" ]; then
  echo "❌ Format check failed."
  exit 1
fi
echo "✅ Format check passed!"

# Step 4: Tests
echo "🧪 Step 4: Running tests..."
pnpm test || exit_code=$?
if [ "$exit_code" ]; then
  echo "❌ Tests failed."
  exit 1
fi
echo "✅ All tests passed!"

echo "🎉 All checks completed — commit ready!"
exit 0
