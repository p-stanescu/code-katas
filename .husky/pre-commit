#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

if [ -f .env.local ]; then
  export $(grep -v '^#' .env.local | xargs)
fi

if [ "$SKIP_HOOKS" = "true" ]; then
  echo "ğŸ” SKIP_HOOKS is true â€” skipping pre-commit checks"
  exit 0
fi

echo "ğŸ“‹ Starting pre-commit checks...\n\n"

echo "ğŸ›¡ï¸ Dependency audit..."
pnpm audit || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ PNPM audit found vulnerabilities."
  echo "ğŸ’¡ Run 'pnpm audit --fix' to automatically fix issues."
  exit 1
fi
echo "âœ… Audit passed!\n\n"

echo "ğŸ§¹ Linting..."
pnpm lint || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ Lint failed."
  exit 1
fi
echo "âœ… Lint passed!\n\n"

echo "ğŸ“ Type checking..."
pnpm typecheck || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ Type check failed."
  exit 1
fi
echo "âœ… Type check passed!\n\n"

echo "ğŸ¨ Format check..."
pnpm format:check || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ Format check failed."
  exit 1
fi
echo "âœ… Format check passed!\n\n"

echo "ğŸ” Running tests..."
pnpm test || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ Tests failed."
  exit 1
fi
echo "âœ… All tests passed!\n\n"

echo "ğŸ‰ All checks completed â€” commit ready!"
exit 0
