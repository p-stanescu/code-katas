#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

if [ -f .env.local ]; then
  export $(grep -v '^#' .env.local | xargs)
fi

# Conditionally skip hooks
if [ "$SKIP_HOOKS" = "true" ]; then
  echo "ğŸ” SKIP_HOOKS is true â€” skipping pre-commit checks"
  exit 0
fi

echo "ğŸ›¡ï¸  Starting pre-commit checks...\n\n"

# Step 1: Dependencies audit
echo "ğŸ”’ Step 1: Security audit..."
pnpm audit || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ PNPM audit found vulnerabilities."
  echo "ğŸ’¡ Run 'pnpm audit --fix' to automatically fix issues."
  exit 1
fi
echo "âœ… Audit passed!\n\n"

# Step 2: Linting
echo "ğŸ§¹ Step 2: Linting..."
pnpm lint || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ Lint failed."
  exit 1
fi
echo "âœ… Lint passed!\n\n"

# Step 3: Type Checking
echo "ğŸ“ Step 3: Type checking..."
pnpm typecheck || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ Type check failed."
  exit 1
fi
echo "âœ… Type check passed!\n\n"

# Step 4: Format Check
echo "ğŸ¨ Step 4: Format check..."
pnpm format:check || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ Format check failed."
  exit 1
fi
echo "âœ… Format check passed!\n\n"

# Step 5: Tests
echo "ğŸ§ª Step 5: Running tests..."
pnpm test || exit_code=$?
if [ "$exit_code" ]; then
  echo "âŒ Tests failed."
  exit 1
fi
echo "âœ… All tests passed!\n\n"

echo "ğŸ‰ All checks completed â€” commit ready!"
exit 0
