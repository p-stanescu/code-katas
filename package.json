{
  "name": "code-katas",
  "version": "1.0.0",
  "description": "A repository for challenges from Code Wars",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "start": "tsx katas/index.ts",
    "clear:dist": "rm -rf dist",
    "clear:node-modules": "rm -rf node_modules",
    "typecheck": "tsc",
    "run": "pnpm run build && pnpm start",
    "test": "vitest run",
    "test:watch": "vitest watch || true",
    "lint": "eslint \"katas/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"katas/**/*.ts\" \"tests/**/*.ts\" --fix",
    "lint:fix:dry": "eslint \"katas/**/*.ts\" \"tests/**/*.ts\" --fix --fix-dry-run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:debug": "prettier . --write --debug-check",
    "format:list-different": "prettier . --list-different"
  },
  "author": "p-stanescu",
  "license": "ISC",
  "devDependencies": {
    "tsx": "4.20.3",
    "typescript": "5.4.5",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "vitest": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.6.2",
    "only-allow": "1.2.1",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "dotenv": "17.2.1",
    "zod": "4.0.15"
  }
}
