{
  "compilerOptions": {
    // Set the module system used in compiled JavaScript output (follows the latest stable Node.js standards)
    "module": "nodenext",

    // Set import statement resolution to actual files (latest stable Node.js features)
    "moduleResolution": "nodenext",

    "esModuleInterop": true,

    "target": "es2022",

    "allowImportingTsExtensions": true,
    "noEmit": true,

    "types": ["node", "vitest/globals"],

    // Type safety rules
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,

    // Module syntax safety rules
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Import safety rules
    "allowSyntheticDefaultImports": true,
    "noUncheckedSideEffectImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "util-scripts",
    ".vscode",
    "*.config.cjs",
    "gitleaks.toml",
    "lefthook.yml"
  ]
}
