{
  "compilerOptions": {
    // Controls the module system used in compiled JavaScript output (latest stable Node.js standards)
    "module": "nodenext",

    // Determines import statement resolution to actual files (latest stable Node.js features)
    "moduleResolution": "nodenext",

    // Interop - must be used to import and compile CommonJS imports (most npm packages)
    "esModuleInterop": true,

    // Javascript (ECMAScript) version matching Node version in .nvmrc (Node 22 supports ES2022+)
    "target": "es2022",

    "allowImportingTsExtensions": true,
    "noEmit": true,

    // Node.js global types and APIs
    "types": ["node"],

    // Type safety rules
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,

    // Module syntax safety
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Import safety
    "noUncheckedSideEffectImports": true
  },
  "exclude": ["node_modules", "dist", "util-scripts", ".vscode"]
}
